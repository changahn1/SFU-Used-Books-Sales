
<%= simple_form_for @book, :html => {:multipart => true} do |f| %>
   <% if @book.errors.any? %>
    <h1>Please fix the following error(s).</h1>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        
        <li><%= message %></li>
      
        <% end %>
       
    </ul>
    <% else %>
        <strong>Book picture</strong>
        <p></p>
        <%= f.file_field :avatar %>
        <p></p>
        <%= f.input :title, label: "Book Title" %>
        <strong>*Department name</strong>
        <p></p>
        <%= f.select :department_id, @departments %>

        <p></p>
        <%= f.input :cnumber, label: "Course Number" %>
        <%= f.input :quality, label: "Book Quality" %>
        <%= f.input :publisher, label: "Book Publisher" %>
        <%= f.input :campus, label: "SFU Campus Location" %>
        <%= f.input :price, label: "Book Price" %>
        <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
    

<% end %>
