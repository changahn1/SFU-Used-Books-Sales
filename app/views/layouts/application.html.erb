<!DOCTYPE html>
<html>
<head>
 <body background="dep.jpg">
  <meta charset="utf-8">
  <title>SFU USED BOOK SALES</title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/header' %>
 
  <div class="container">
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
   <li class = "dropdown">
        <a href="#" class = "dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Departments<span class = "caret"></span></a>
          <ul class="dropdown-menu" role="menu">
        <% Department.all.each do |department| %>
        <li>
          <%= link_to department.name, books_path(department: department.name), class:"link" %>
        </li>
        <% end %>
        </ul>
      </li>
  <%= yield %>
   
</div>

<div class = "container">
  <%= render 'layouts/footer' %>
</div>

 

</body>
</body>
</html>
