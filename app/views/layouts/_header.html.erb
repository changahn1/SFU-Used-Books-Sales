<header class="navbar navbar-inverse">
  <div class="container">
    
    <div class="navbar-header">
      
      <%= link_to 'SFU USED BOOKS', root_path, class: 'navbar-brand' %>
      
    </div>
     <div id="navbar">
       
      <% if current_user %>
      
        <ul class="nav navbar-nav pull-right">
          
      
       <li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
       
         <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.username %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", profile_path %></li>
              <li>
              <a href="https://bookstore-heroku-changahn1.c9users.io/books?utf8=%E2%9C%93&username=<%=current_user.username%>">My Books</a>
              </li>
              <li><%= link_to "Settings", edit_user_registration_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", destroy_user_session_path, method: :delete%>
              </li>
            </ul>
          </li>
        </ul>
      <% else %>
         <ul class="nav navbar-nav pull-right">
          <%= link_to "Login",   new_user_session_path,  class: 'navbar-brand' %>
          
          
        </ul>
      <% end %>
    </div>
    <div id="navbar">
    <ul class="nav navbar-nav">
      <li class="dropdown">
      <a href="#" class = "navbar-brand dropdown-toggle" data-toggle="dropdown">Department<b class = "caret"></b></a>
          <ul class="dropdown-menu-depart dropdown-menu pull-left">
            <% Department.all.each do |department| %>
              <li>
                  <%= link_to department.name, books_path(department: department.name), class:"link" %>
              </li>
             <% end %>
             </ul>
             </li>
          </ul>
      </div>
       <%= link_to "Sell", new_book_path, class: 'navbar-brand' %>
        </ul>
    <ul class= "nav navbar-nav search-bar pull-left">
    <%= form_tag books_path, method: :get do %>
    <%= text_field_tag :username, params[:username], placeholder: 'Username or Book Title' %>
    <%= submit_tag "Search", name: nil %>
    <% end %>
    </ul>
    
    
      
      
      
   
        
      <ul class="nav navbar-nav pull-right">
    
      <li><%= link_to "Home",   root_path,  class: 'navbar-brand' %>
    
      
      <%= link_to "About",   about_path,  class: 'navbar-brand' %>
      <%= link_to "Contact",   contact_path,  class: 'navbar-brand' %>
      
 
       </ul>
   
  </div>
